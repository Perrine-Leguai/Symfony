{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">Il semblerait que votre identifiant ou mot de passe soit incorrect</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes déjà connecté.e : {{ app.user.username }}, <a href="{{ path('app_logout') }}">Vous cherchez à vous déconnecter ?</a>
        </div>
    {% endif %}

    <div class="container">

        <div class="row">
            <div class="col-md-3">&nbsp;</div>
            <div class="col-md-6">
                <div class="bg-light py-3 px-3">
                    <h1 class="h3 mb-3 font-weight-normal">Enregistrez vous pour accéder à votre compte ! </h1>

                    <form action="{{path('app_login')}}" method="post">    
                        <div class="form-group">
                            <label for="inputUsername">Pseudo</label>
                            <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword">Mot de passe</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Connexion</button>
                        </div>
                        <input type="hidden" name="_csrf_token"
                            value="{{ csrf_token('authenticate') }}"
                        >
                    </form>
                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Se souvenir de moi
                        </label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
{% endblock %}
