{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur la page d'ajout !{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! ✅</h1>

    <h3>Création d'un article</h3>

    <form action="" method ="post" class="col-8">  {#les infos arriveront en request si envoie en post, par contre si envoie en get, les infos arriveront des query, au niveau du target du profiler#}
        <input type="text" name="nomProduit" placeholder="nom du produit">
        <input type="number" name="prix" placeholder="prix du produit">
        <input type="number" name="largeur" placeholder="largeur en cm">
        <input type="number" name="profondeur" placeholder="profondeur en cm">
        <input type="number" name="hauteur" placeholder="hauteur en cm">
        <button type="submit">enregistrer</button>
    </form>   
</div>
{% endblock %}
